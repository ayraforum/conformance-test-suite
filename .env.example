############################
# Core toggle / ngrok
############################
USE_NGROK=true                             # true to expose public URLs via ngrok; false for local-only
NGROK_AUTH_TOKEN=your-ngrok-token-here    # required when USE_NGROK=true

############################
# Agent selection
############################
REFERENCE_AGENT=credo                     # credo | acapy (reference/holder/verifier agent inside CTS)
ISSUER_OVERRIDE_AGENT=credo               # auto | credo | acapy (which controller to use for issuer steps)

############################
# ACA-Py issuer (when REFERENCE_AGENT or ISSUER is acapy)
############################
ACAPY_CONTROL_URL=http://acapy-control:9001   # ACA-Py admin/control base URL
ACAPY_PROFILE=issuer                          # profile file under services/acapy-control/profiles (without .yaml)
# DIDComm endpoint advertised in invitations/DIDDocs; set to public ngrok URL if using mobile wallets
ACAPY_ENDPOINT=http://acapy-control:8041
# Base used to format invitation URLs; usually same as ACAPY_ENDPOINT (set to ngrok URL if needed)
ACAPY_INVITE_BASE_URL=http://acapy-control:8041

############################
# ACA-Py internal holder (optional, for tests/demos)
############################
ACAPY_HOLDER_CONTROL_URL=http://acapy-holder-control:9003   # control URL for internal holder; leave unset to use external wallet only
ACAPY_HOLDER_PROFILE=holder                                 # profile file name (without .yaml)
ACAPY_AUTO_SEND_INVITE_TO_INTERNAL_HOLDER=false             # true to auto-send invite to internal holder; false to keep manual demo
# Optional holder-specific endpoint/base (defaults to holder container HTTP port)
ACAPY_HOLDER_ENDPOINT=http://acapy-holder-control:8043
ACAPY_HOLDER_INVITE_BASE_URL=http://acapy-holder-control:8043

############################
# NGROK public domains (only when USE_NGROK=true)
############################
REFERENCE_AGENT_NGROK_DOMAIN=reference-agent.your-org.ngrok.app   # used for QR/invite URLs of reference agent
ISSUER_NGROK_DOMAIN=                                            # optional separate issuer domain (if different from reference)
ISSUER_OVERRIDE_NGROK_DOMAIN=issuer.your-org.ngrok.app           # issuer override domain (used when issuer is external)
VERIFIER_TEST_NGROK_DOMAIN=verifier.your-org.ngrok.app           # legacy verifier test container
SERVER_NGROK_DOMAIN=cts-server.your-org.ngrok.app                # CTS API/server callbacks (optional)

############################
# Ayra context / schema
############################
AYRA_CONTEXT_PATH=/app/schema/AyraBusinessCardV1R0.jsonld    # path (inside container) to Ayra JSON-LD context

############################
# Trust Registry / TRQP
############################
NEXT_PUBLIC_DID_RESOLVER_URL=https://dev.uniresolver.io/1.0/identifiers
NEXT_PUBLIC_TRQP_KNOWN_ENDPOINT=
NEXT_PUBLIC_TRQP_LOCAL_URL=
