############################
# Core toggle / ngrok
############################
USE_NGROK=true                             # true to expose public URLs via ngrok; false for local-only
NGROK_AUTH_TOKEN=your-ngrok-token-here    # required when USE_NGROK=true

############################
# Agent selection
############################
REFERENCE_AGENT=credo                     # credo | acapy (reference/holder/verifier agent inside CTS)
REFERENCE_ISSUER_OVERRIDE_AGENT=auto      # auto | credo | acapy (auto follows REFERENCE_AGENT)
REFERENCE_VERIFIER_OVERRIDE_AGENT=auto    # auto | credo | acapy (auto follows REFERENCE_AGENT)
ALLOW_ACAPY_ANONCREDS=false               # true to allow AnonCreds issuance when using ACA-Py (requires AnonCreds-enabled ACA-Py profile)

############################
# ACA-Py issuer (when REFERENCE_AGENT or ISSUER is acapy)
############################
ACAPY_CONTROL_URL=http://acapy-control:9001   # ACA-Py admin/control base URL
ACAPY_PROFILE=issuer                          # profile file under services/acapy-control/profiles (without .yaml)
# DIDComm endpoint advertised in invitations/DIDDocs; set to public ngrok URL if using mobile wallets
ACAPY_ENDPOINT=http://acapy-control:8041
# Base used to format invitation URLs; usually same as ACAPY_ENDPOINT (set to ngrok URL if needed)
ACAPY_INVITE_BASE_URL=http://acapy-control:8041
# DID method for issuer DID creation (e.g., key, webvh)
CTS_ISSUER_DID_METHOD=key
# Optional JSON options passed to /wallet/did/create (leave empty for defaults)
CTS_ISSUER_DID_OPTIONS=
# Optional ACA-Py admin URL (used by scripts like generate:did-doc)
ACAPY_ADMIN_URL=

############################
# Control service logging
############################
UVICORN_LOG_LEVEL=info

############################
# ACA-Py logging/tracing
############################
ACAPY_LOG_LEVEL=DEBUG
ACAPY_TRACE=true
ACAPY_TRACE_TARGET=log
ACAPY_TRACE_TAG=cts
ACAPY_TRACE_LABEL=cts-acapy
# Set true to include full webhook payloads in logs (summary logs are always on)
ACAPY_WEBHOOK_DUMP_PAYLOADS=false

############################
# ACA-Py internal holder (optional, for tests/demos)
############################
ACAPY_HOLDER_CONTROL_URL=http://acapy-holder-control:9003   # control URL for internal holder; leave unset to use external wallet only
ACAPY_HOLDER_PROFILE=holder                                 # profile file name (without .yaml)
ACAPY_AUTO_SEND_INVITE_TO_INTERNAL_HOLDER=false             # true to auto-send invite to internal holder; false to keep manual demo
# Optional holder-specific endpoint/base (defaults to holder container HTTP port)
ACAPY_HOLDER_ENDPOINT=http://acapy-holder-control:8043
ACAPY_HOLDER_INVITE_BASE_URL=http://acapy-holder-control:8043

############################
# ACA-Py verifier (optional, for demo/testing only)
############################
# Set to spin up a dedicated ACA-Py verifier for demos; real verifier-under-test remains external.
ACAPY_VERIFIER_CONTROL_URL=http://acapy-verifier-control:9010   # control URL for demo verifier; leave unset to skip
ACAPY_VERIFIER_PROFILE=verifier                                # profile name (without .yaml)
ACAPY_VERIFIER_ENDPOINT=http://acapy-verifier-control:8042     # advertised endpoint for demo verifier (container-internal)
ACAPY_VERIFIER_INVITE_BASE_URL=http://acapy-verifier-control:8042
ACAPY_VERIFIER_ADMIN_HOST=acapy-verifier-control
# Demo helper: when true, CTS will automatically send the PE v2 proof request from the internal verifier
# after it accepts the OOB invitation (so you don't need to curl `/proofs/request` manually).
ACAPY_VERIFIER_AUTO_SEND_PROOF_REQUEST=false

############################
# NGROK public domains (only when USE_NGROK=true)
############################
REFERENCE_AGENT_NGROK_DOMAIN=reference-agent.your-org.ngrok.app   # used for QR/invite URLs of reference agent
ISSUER_NGROK_DOMAIN=                                            # optional separate issuer domain (if different from reference)
ISSUER_OVERRIDE_NGROK_DOMAIN=issuer.your-org.ngrok.app           # issuer override domain (used when issuer is external)
VERIFIER_TEST_NGROK_DOMAIN=verifier.your-org.ngrok.app           # legacy verifier test container
SERVER_NGROK_DOMAIN=cts-server.your-org.ngrok.app                # CTS API/server callbacks (optional)
# DID document host domain for the CTS API/ngrok sidecar (preferred)
DID_WEB_NGROK_DOMAIN=did-web.your-org.ngrok.app

############################
# Reference agent DIDComm endpoints (used by Credo)
############################
# OOB `serviceEndpoint` advertised inside invitations created by the Credo reference agent (regardless of role).
# Leave unset to derive it as `http://<API_URL host>:${AGENT_PORT}` in local mode.
# Examples:
# - Local docker (internal holder): `http://app:5006`
# - Host-only: `http://localhost:5006`
REFERENCE_AGENT_OOB_SERVICE_ENDPOINT=
# When auto-sending an invitation to the internal ACA-Py holder, rewrite any `localhost` serviceEndpoint
# inside the invitation to this value.
# Leave unset to use the default `http://app:${AGENT_PORT||5006}`.
INTERNAL_HOLDER_DIDCOMM_ENDPOINT=

############################
# Ayra context / schema
############################
AYRA_CONTEXT_PATH=/app/schema/AyraBusinessCardV1R0.jsonld    # path (inside container) to Ayra JSON-LD context
# Debug: when true, logs the full Ayra credential JSON to task messages during issuance
DEBUG_AYRA_CREDENTIAL=false
# Trust Network (EGF/authority) DID embedded in issued VCs; used as recognition authority_id
AYRA_TRUST_NETWORK_DID=did:web:ayra.forum
# Ecosystem DID embedded in issued VCs; used to resolve the TRQP endpoint for holder flow checks
AYRA_ECOSYSTEM_DID=did:web:ecosystem.example

# DID document hosting (optional; defaults to packages/cts/public/.well-known/did.json)
CTS_DID_DOCUMENT_PATH=

############################
# Trust Registry / TRQP
############################
NEXT_PUBLIC_DID_RESOLVER_URL=https://dev.uniresolver.io/1.0/identifiers
NEXT_PUBLIC_TRQP_KNOWN_ENDPOINT=
NEXT_PUBLIC_TRQP_LOCAL_URL=
