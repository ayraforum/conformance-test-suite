generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TestRuns {
  id                     Int                   @id @default(autoincrement())
  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt()
  profileConfigurationId String
  profileConfiguration   ProfileConfigurations @relation(fields: [profileConfigurationId], references: [id])
  logs                   String[]
  logPath                String?
  jsonReport             Json?
  state                  String                @default("pending")
  results                Json?
  error                  String?
  pid                    Int?
  processId              String? // UUID for the process
  processStatus          String? // Status of the process
  lastManualInteractionStep String?
}

model Systems {
  id                    String                  @id @default(uuid())
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt()
  name                  String
  description           String
  version               String
  ProfileConfigurations ProfileConfigurations[]
}

model ProfileConfigurations {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt()
  name          String
  description   String
  systemId      String
  system        Systems    @relation(fields: [systemId], references: [id])
  configuration Json?
  testRuns      TestRuns[]
  type          String       @default("api")
  conformant   Boolean      @default(false)
  locked        Boolean      @default(false)
  endpoint      String
  role          String       @default("issuer")
}
