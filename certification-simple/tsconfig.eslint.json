{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@demo/*": ["packages/**"]
    }
  },
  "include": [
    "packages",
    "./.eslintrc.js",
    "./jest.config.ts",
    "./jest.config.base.ts",
    "types",
    "tests",
    "samples",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "gen",
    "dud-app",
    "packages/dud-app",
    "app",
    "packages/app"
  ]
}
