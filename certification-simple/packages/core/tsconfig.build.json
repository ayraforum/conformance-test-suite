{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "skipDefaultLibCheck": true,
    "rootDir": "."
  },
  "include": ["agent/**/*", "src/**/*"],
  "exclude": [
    "node_modules",
    "tests",
    "**/__mocks__/*.ts",
    "**/tests/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/jest.config.ts",
    "**/jest.config.*.ts"
  ]
}
