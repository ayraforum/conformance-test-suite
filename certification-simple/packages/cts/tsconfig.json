{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "types": [
      "jest"
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/*": ["./src/*"],
      "@demo/core": ["../core/build/agent"],
      "@demo/core/*": ["../core/build/agent/*"],
      "@demo/core/agent/core": ["../core/build/agent/core"],
      "@demo/core/agent/core/*": ["../core/build/agent/core/*"],
      "@demo/core/pipeline/src/types": ["../core/build/pipeline/src/types"],
      "@demo/core/pipeline/src/nodes": ["../core/build/pipeline/src/nodes"],
      "@demo/core/pipeline/src/tasks": ["../core/build/pipeline/src/tasks"],
      "@demo/core/pipeline/src/tasks/*": ["../core/build/pipeline/src/tasks/*"],
      "@demo/core/pipeline/src/dag": ["../core/build/pipeline/src/dag"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "scripts/**/*"
  ]
}
