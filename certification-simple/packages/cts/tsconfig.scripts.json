{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@demo/core": ["../core/build/agent"],
      "@demo/core/*": ["../core/build/agent/*"],
      "@demo/core/pipeline/src/types": ["../core/build/pipeline/src/types"],
      "@demo/core/pipeline/src/nodes": ["../core/build/pipeline/src/nodes"],
      "@demo/core/pipeline/src/tasks": ["../core/build/pipeline/src/tasks"],
      "@demo/core/pipeline/src/tasks/*": ["../core/build/pipeline/src/tasks/*"]
    }
  },
  "include": [
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*",
    "server/**/*"
  ]
}
